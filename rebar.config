{minimum_otp_vsn, "R16B02_basho10"}.

{brt_protect, true}.

{erl_opts, [
    % these will go away
    {platform_define, "^R16",     'NO_MAP_TYPE'},
    {platform_define, "^(R|17)",  'NO_RAND_MODULE'},

    debug_info,
    warn_bif_clash,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_unused_import
]}.

{profiles, [
    {check, [
        {dialyzer, [
            {warnings, [
                error_handling,
                race_conditions,
                unknown,
                unmatched_returns
            ]}
        ]},
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            {d, 'BASHO_CHECK'}
        ]},
        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},
    {docs, [
        {edoc_opts, [
            {app_default, "http://www.erlang.org/doc/man"},
            {preprocess, true},
            {macros, [
                {'EDOC', true},
                {'BASHO_DOCS', true}
            ]}
        ]}
    ]},
    {prod, [
        {erl_opts, [
            warnings_as_errors,
            {d, 'BASHO_PROD'}
        ]}
    ]},
    {test, [
        {cover_enabled, true},
        {erl_opts, [
            debug_info,
            nowarn_export_all,
            nowarn_unused_function,
            warnings_as_errors,
            {d, 'BASHO_TEST'}
        ]},
        {pre_hooks, [
            {eunit,  "cp -fpr support $REBAR_DEPS_DIR/mochiweb"}
        ]}
    ]},
    {example, [
        {src_dirs, ["src", "examples"]},
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            {d, 'BASHO_EXAMPLE'}
        ]},
        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},
    {validate, [
        {erl_opts, [
            strong_validation,
            no_auto_import,
            warn_bif_clash,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_missing_spec,
            warn_missing_spec_all,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_untyped_record,
            warn_unused_function,
            warn_unused_import,
            warn_unused_record,
            warn_unused_vars,
            {d, 'BASHO_VALIDATE'}
        ]}
    ]}
]}.

{brt_upstream, [
    {upstream, {git, "https://github.com/mochi/mochiweb.git"}},
    {mirror, upstream, master}
]}.

{plugins, [
    {basho_rebar_tools,
        {git, "https://github.com/basho/basho_rebar_tools.git",
        {branch, "master"} }}
]}.
